<LoginScreen>:
  GridLayout:
    cols: 1
    padding: 15,15
    #padding is distance between edges of screen
    spacing: 20,20
    #spacing is distance between widgets in grid
    GridLayout:
      cols: 1
      Image:
        source: 'awt_logo.jpeg'
      TextInput:
        id: username
        hint_text: "Username"
      TextInput:
        id: password
        password: True
        hint_text: "Password"
      RelativeLayout:
        Button:
          text: "Login"
          on_press: root.login(root.ids.username.text, root.ids.password.text)
          side_hint: 0.3, 0.5
          pos_hint: {'center_x':0.5,'center_y':0.6}
      Label:
        id: login_wrong
        text: " "
    GridLayout:
      cols: 2
      size_hint: 0.2, 0.2
      padding: 10, 10
      spacing: 10, 0
      Button:
        text: "Forgot Password?"
        background_color: 1, 1, 1, 0
        color: 0.1, 0.7, 1, 1
        opacity: 1 if self.state == 'normal' else 0.5

      Button:
        text: "Sign Up"
        background_color: 1, 1, 1, 0
        color: 0.1, 0.7, 1, 1
        opacity: 1 if self.state == 'normal' else 0.5
        on_press: root.sign_up()

<SignUpScreen>:
  GridLayout:
    cols: 1
    padding: 20, 20
    spacing: 20, 20
    Label:
      text: "Sign up for a space journey with James!"
    TextInput:
      id: username
      hint_text: "username"
    TextInput:
      id: password
      hint_text: "Password"
    Button:
      text: "Submit"
      on_press: root.add_user(root.ids.username.text, root.ids.password.text)
    
<SignUpScreenSuccess>:
  GridLayout:
    cols: 1
    Label:
      text: "Sign up succesful"
    Button:
      text: "Login Page"
      on_press: root.go_to_login()
   
<LoginScreenSuccess>:
  GridLayout:
    cols: 1
    Button:
      text: "Logout"
      on_press: root.log_out()  

      #here where the new stuff would go


    
<RootWidget>:
  LoginScreen:
    name: "login_screen"
  SignUpScreen:
    name: "sign_up_screen"
  SignUpScreenSuccess:
    name: "sign_up_screen_success"
  LoginScreenSuccess:
    name: "login_screen_success"

